<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="my-pu">

        <class>org.learning.model.Pokemon</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/demo"/>
            <property name="jakarta.persistence.jdbc.user" value="raphael"/>
            <property name="jakarta.persistence.jdbc.password" value="raphael"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>-->
        </properties>

    </persistence-unit>

</persistence>